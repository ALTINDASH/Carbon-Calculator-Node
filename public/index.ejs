<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carbon Calculator</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= GOOGLE_MAPS_API_KEY %>&libraries=places&callback=initMap" async defer></script>
</head>
<body>
    <div class="container">
        <header>
            <h1>Carbon Calculator</h1>
            <div id="auth-container">
                <button id="login-btn" class="auth-btn">Login</button>
                <button id="signup-btn" class="auth-btn">Sign Up</button>
                <button id="logout-btn" class="auth-btn" style="display: none;">Logout</button>
            </div>
        </header>

        <!-- Auth Modal -->
        <div id="auth-modal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <h2 id="modal-title">Login</h2>
                <form id="auth-form">
                    <input type="email" id="email" placeholder="Email" required>
                    <input type="password" id="password" placeholder="Password" required>
                    <button type="submit" class="auth-btn">Submit</button>
                </form>
            </div>
        </div>

        <main>
            <div class="route-inputs">
                <input type="text" id="start-point" placeholder="Enter starting point">
                <input type="text" id="destination" placeholder="Enter destination">
                <button id="calculate-btn">Calculate Carbon Footprint</button>
            </div>

            <div id="map"></div>

            <div id="results" class="results-container">
                <h2>Results</h2>
                <div id="carbon-result"></div>
                <div id="distance-result"></div>
            </div>

            <div id="history" class="history-container">
                <h2>History</h2>
                <div id="history-list"></div>
            </div>
        </main>
    </div>

    <script>
        // Firebase configuration
        const firebaseConfig = <%- FIREBASE_CONFIG %>;
    </script>
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.19.1/firebase-firestore-compat.js"></script>
    <script src="app.js"></script>
</body>
</html> 